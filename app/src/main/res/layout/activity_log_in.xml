<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="92dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="50dp"
                android:text="Fill in your email and password to continue"
                android:textColor="#80000000" />


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_weight="1"
                android:text="Email Address"
                android:textColor="#80000000" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText3"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="  ******************@mail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="#37000000" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_weight="1"
                android:text="Password"
                android:textColor="#80000000" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText4"
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="208dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/sin"
                    android:text="Remember password"
                    android:textColor="#8B000000" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Forgot Password?"
                    android:textAlignment="center"
                    android:textColor="#0000FF"
                    android:textColorLink="#0000FF" />
            </LinearLayout>


            <Button
                android:id="@+id/buttonLogIn"
                android:layout_width="380dp"
                android:layout_height="58dp"
                android:layout_marginTop="110dp"
                android:backgroundTint="#808080"
                android:radius="4dp"
                android:text="Log In"
                android:textColorHighlight="#6F000000"
                android:textColorLink="#8A000000"
                app:cornerRadius="3dp"
                app:iconTint="#A8A8A8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="10dp"
                    android:text="Sign Up  Already have an account?"
                    android:textColor="#808080"
                    android:textColorHint="#808080" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-10dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Sing Up"
                    android:textAlignment="center"
                    android:textColor="#0000FF"
                    android:textColorLink="#0000FF" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="or sign in using"
                android:textAlignment="center"
                android:textColor="#808080" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                app:srcCompat="@drawable/google" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>